datasource database {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userId           String    @id @default(cuid())
  email            String    @unique
  name             String    @unique
  password         String
  bio              String?
  image            String?   @default("https://solidstart-realworld.herokuapp.com")
  following        User[]    @relation("UserFollows")
  followers        User[]    @relation("UserFollows")
  favoriteArticles Article[] @relation(name: "FavoritedArticles")
  articles         Article[] @relation("ArticleAuthor")
  comments         Comment[]
}

model Tag {
  tagId    String    @id @default(cuid())
  name     String    @unique
  articles Article[]
}

model Article {
  articleId      String    @id @default(cuid())
  slug           String    @unique
  title          String
  description    String
  body           String
  tags           Tag[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  favoritesCount Int       @default(0)
  author         User?     @relation(name: "ArticleAuthor", fields: [authorId], references: [userId])
  authorId       String?
  favoritedBy    User[]    @relation(name: "FavoritedArticles")
  comments       Comment[]
}

model Comment {
  commentId String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  body      String
  author    User     @relation(fields: [authorId], references: [userId])
  authorId  String
  article   Article? @relation(fields: [articleId], references: [articleId])
  articleId String?
}
