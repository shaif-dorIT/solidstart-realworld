{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "typeRoots": ["./typings"],
    "types": ["vite/client", "vitest"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    ".eslintrc.cjs",
    "typings/index.d.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "scripts/**/*"]
}
